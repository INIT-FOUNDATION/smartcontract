---
export type Props = {
  src: string
  sources?: string[]
  alt?: string
  style?: string
}
const { src, sources, alt, style } = Astro.props as Props

/**
 * This component adds the classNames required by the scripts/click-to-zoom.ts script.
 * Preferred image sources can be specified in `sources[]` and display them only if the
 * browser supports the format.
 *
 * Supported formats: https://www.iana.org/assignments/media-types/media-types.xhtml#image
 */
---

<picture class="click-to-zoom-wrapper">
  {sources?.map((source) => <source type={`image/${source.split(".").pop()}`} srcset={source} />)}
  <img src={src} alt={alt} style={style} class="click-to-zoom" decoding="async" />
</picture>

<style>
  .click-to-zoom {
    margin-top: 1em;
    max-height: 27em;
    cursor: zoom-in;
  }
</style>
<style is:global>
  #expanded-image-preview {
    max-height: 75vh;
    max-width: 90vw;
  }
  #expanded-image-wrapper {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.214);
    z-index: 100;
    justify-content: center;
    align-content: center;
    align-items: center;
    margin: 0;
    cursor: zoom-out;
    display: none;
  }
  @media (min-width: 50em) {
    #expanded-image-wrapper {
      display: flex;
    }
  }
</style>
