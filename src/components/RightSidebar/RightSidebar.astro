---
import TableOfContents from "./TableOfContents"
import MoreMenu from "./MoreMenu.astro"
import { Feedback } from "../PageContent/Feedback"

export type Props = {
  githubEditUrl: string
}
const { githubEditUrl } = Astro.props
---

<section class="sidebar-nav" aria-labelledby="grid-right">
  <TableOfContents client:media="(min-width: 72em)" />
  <MoreMenu editHref={githubEditUrl} />
  <h2 class="heading feedback-title">Feedback</h2>
  <div class="feedback-wrapper">
    <Feedback client:idle />
  </div>
</section>

<style>
  .sidebar-nav {
    height: fit-content;
    padding: 0 0 calc(2 * var(--doc-padding)) var(--doc-padding);
    position: sticky;
    top: 0;
  }

  .feedback-title {
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: var(--space-2x);
    color: var(--color-text-heading);
    margin-top: var(--space-8x);
  }

  .feedback-wrapper {
    margin-top: var(--space-3x);
  }
</style>
