---
import BaseLayout from "./BaseLayout.astro"
import * as CONFIG from "../config"

const formattedContentTitle = `${CONFIG.PAGE.titleFallback} | ${CONFIG.SITE.title}`
---

<BaseLayout title={formattedContentTitle}>
  <main class="layout">
    <div id="grid-main">
      <slot />
    </div>
  </main>
</BaseLayout>

<style>
  .layout {
    --gutter: var(--space-6x);
    --doc-padding: 2rem;

    display: grid;
    grid-auto-flow: column;
    grid-template-columns: minmax(0, var(--max-width));
    overflow-x: hidden;
    justify-content: center;
  }

  #grid-left {
    position: fixed;
    background-color: var(--theme-bg);
    z-index: 10;
    display: none;
  }

  #grid-main {
    padding: 0 var(--gutter);
    grid-column: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    top: 2rem;
  }
  @media (min-width: 50em) {
    .layout {
      overflow: initial;
      grid-template-columns: minmax(0, var(--fullwidth-max-width));
      gap: 1em;
    }
  }
  @media (min-width: 72em) {
    .layout {
      grid-template-columns: min(calc(1440px - 2 * var(--space-16x)), calc(100% - 2 * var(--space-16x)));
      padding-left: 0;
      padding-right: 0;
      margin-left: auto;
      margin-right: auto;
    }

    #grid-main {
      padding: 0;
    }
  }
</style>
