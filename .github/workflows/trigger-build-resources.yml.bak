name: Build and Publish Feed Resources

on:
  push:
    branches:
      - main

jobs:
  repo-dispatch-build-resources:
    name: Kick off build-resources related to feeds data
    runs-on: ubuntu-latest
    steps:
      - name: Issue repository dispatch
        # Pin to v1.0.0
        uses: peter-evans/repository-dispatch@0ae1c4b014bff102f1063cd67a53fc4a91311d1b
        with:
          token: ${{secrets.SERVICE_CHAINLINK_FEEDS_DATA_DISPATCHER_REPO_TOKEN}}
          repository: smartcontractkit/feeds_data
          event-type: build-resources